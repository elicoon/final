 <div class="container mt-5">
      <h1>Type your address</h1>

 <form action="/polling_location">
    <div class="form-group">
    <label for="inputAddress">Address Line 1</label>
    <input type="text" class="form-control" placeholder="800 Elgin Rd" name="ad_line1">
  </div>
  <div class="form-group">
    <label for="inputAddress2">Address Line 2</label>
    <input type="text" class="form-control" id="st_name" placeholder="Apartment 509" name="ad_line2">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="form-control" id="inputCity" name="inputCity">
    </div>
    <div class="form-group col-md-4">
      <label for="inputState">State</label>
      <input type="text" class="form-control" id="inputState" name="inputState">
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip">Zip</label>
      <input type="text" class="form-control" id="inputZip" name="inputZip">
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
  </div>
</form>
</div>